{
  "name": "farcebook",
  "version": "1.2.1",
  "description": "A basic template for a React & Typescript-based idle/incremental game.",
  "author": "Chris N",
  "license": "cc-by-sa-4.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kitstigator/farcebook.git"
  },
  "homepage": "https://kitstigator.github.io/farcebook",
  "keywords": [
    "clicker",
    "game",
    "incremental",
    "idle",
    "template"
  ],
  "bugs": {
    "url": "https://github.com/kitstigator/farcebook/issues"
  },
  "dependencies": {
    "bootstrap": "5.3.2",
    "jotai": "2.4.3",
    "react": "18.2.0",
    "react-bootstrap": "2.9.0",
    "react-dom": "18.2.0",
    "react-tsparticles": "2.12.2",
    "tsparticles": "2.12.0",
    "tsparticles-engine": "2.12.0"
  },
  "devDependencies": {
    "@cneuro/eslint-config-functional": "1.9.1 ",
    "@types/node": "20.8.7",
    "@types/react": "18.2.31",
    "@types/react-dom": "18.2.14",
    "@vitejs/plugin-react": "4.1.0",
    "eslint": "8.51.0",
    "husky": "8.0.3",
    "lint-staged": "15.0.2",
    "prettier": "3.0.3",
    "typescript": "5.2.2",
    "vite": "4.5.0",
    "vite-plugin-checker": "0.6.2",
    "vite-plugin-svgr": "4.1.0",
    "vite-tsconfig-paths": "4.2.1"
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "npm run format"
    ],
    "*.{ts,tsx}": [
      "npm run lint-code",
      "npm run format"
    ]
  },
  "scripts": {
    "build": "vite build",
    "format": "prettier --write .",
    "lint-code": "eslint --fix --ext .ts,.tsx .",
    "prepare": "husky install",
    "start": "vite"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  }
}
