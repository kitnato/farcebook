{
  "name": "farcebook",
  "version": "1.1.0",
  "description": "A basic template for a React & Typescript-based idle/incremental game.",
  "author": "Chris N",
  "license": "cc-by-sa-4.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cneuro/farcebook.git"
  },
  "keywords": [
    "clicker",
    "game",
    "incremental",
    "idle",
    "template"
  ],
  "bugs": {
    "url": "https://github.com/cneuro/farcebook/issues"
  },
  "dependencies": {
    "bootstrap": "^5.2.3",
    "jotai": "^2.0.4",
    "react": "^18.2.0",
    "react-bootstrap": "^2.7.4",
    "react-dom": "^18.2.0",
    "react-tsparticles": "^2.9.3",
    "tsparticles": "^2.9.3",
    "tsparticles-engine": "^2.9.3"
  },
  "devDependencies": {
    "@cneuro/eslint-config-functional": "^1.7.0",
    "@types/node": "^18.15.12",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "eslint": "^8.38.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "typescript": "^5.0.4",
    "vite": "^4.3.0",
    "vite-plugin-checker": "^0.5.6",
    "vite-plugin-svgr": "^2.4.0",
    "vite-tsconfig-paths": "^4.2.0"
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "npm run format"
    ],
    "*.{ts,tsx}": [
      "npm run lint-code",
      "npm run format"
    ]
  },
  "scripts": {
    "build": "vite build",
    "format": "prettier --write .",
    "lint-code": "eslint --fix --ext .ts,.tsx .",
    "prepare": "husky install",
    "start": "vite"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
